<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/comresBothMatchParentStyle"
        android:background="@color/comresLayoutBgColorLightGray"
        android:orientation="vertical"
        >

    <ScrollView
            style="@style/comresBothMatchParentStyle"
            android:fillViewport="true"
            android:scrollbars="none"
            >

        <LinearLayout
                android:id="@+id/llSvContent"
                style="@style/comresBothMatchParentStyle"
                android:layout_marginLeft="@dimen/comresSideMarginDefault"
                android:layout_marginRight="@dimen/comresSideMarginDefault"
                android:orientation="vertical"
                >

            <LinearLayout
                    android:id="@+id/llBtnContainer"
                    style="@style/comresOnlyWidthMatchParentLayoutStyle"
                    android:orientation="vertical"
                    >

                <Button
                        android:id="@+id/btnMorseCodeTranslator"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mscdHomepageMorseCodeTranslator"
                        />

                <Button
                        android:id="@+id/btnMorseCodeLearning"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mscdHomepageMorseCodeLearning"
                        />

                <Button
                        android:id="@+id/btnBuildAudioConfig"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build Audio Config"
                        />

                <Button
                        android:id="@+id/btnStartPlayAudio"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Play Audio"
                        />

                <Button
                        android:id="@+id/btnStopAllPlayAudio"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stop All Play Audio"
                        />

                <Button
                        android:id="@+id/btnStopCurrentPlayAudio"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stop Current Play Audio"
                        />

                <Button
                        android:id="@+id/btnPausePlayAudio"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pause Play Audio"
                        />

                <Button
                        android:id="@+id/btnResumePlayAudio"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resume Play Audio"
                        />

                <Button
                        android:id="@+id/btnReleaseAudioTrack"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Release Audio Track"
                        />

                <Button
                        android:id="@+id/btnLogcatAudioTrackState"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logcat Audio Track State"
                        />

                <Button
                        android:id="@+id/btnInitMorseCodeConverterConfig"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Init Morse Code Converter Config"
                        />

                <Button
                        android:id="@+id/btnLogcatMessageDurationPatternArray"
                        style="@style/comresCommonBtnDefaultStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logcat Message Duration Pattern Array"
                        />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
