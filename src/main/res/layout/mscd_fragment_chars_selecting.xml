<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/comkitBothMatchParentStyle"
        android:background="@color/comkitLayoutBgColorLightGray"
        android:orientation="vertical"
        >

    <ScrollView
            style="@style/comkitBothMatchParentStyle"
            android:fillViewport="true"
            android:scrollbars="none"
            >

        <LinearLayout
                android:id="@+id/llSvContent"
                style="@style/comkitBothMatchParentStyle"
                android:layout_marginLeft="@dimen/comkitSideMarginDefault"
                android:layout_marginRight="@dimen/comkitSideMarginDefault"
                android:orientation="vertical"
                >

            <LinearLayout
                    android:id="@+id/llDescriptionContainer"
                    style="@style/comkitOnlyWidthMatchParentLayoutStyle"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    >

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mscdCharSelectingRecommendedSequence"
                        android:textColor="@color/comkitColorBlack"
                        android:textSize="@dimen/comkitTextSize20Sp"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llCharSelectContainer"
                    style="@style/comkitArrangeHeightUsingWeightLayoutStyle"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                <LinearLayout
                        android:id="@+id/llCharSelectRow1"
                        style="@style/comkitArrangeInOneRowLayoutStyle"
                        >

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetK"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetK"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetM"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetM"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetR"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetR"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetS"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetS"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetU"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetU"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetA"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetA"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llCharSelectRow2"
                        style="@style/comkitArrangeInOneRowLayoutStyle"
                        >

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetP"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetP"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetT"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetT"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetL"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetL"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetO"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetO"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetW"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetW"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetI"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetI"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llCharSelectRow3"
                        style="@style/comkitArrangeInOneRowLayoutStyle"
                        >

                    <CheckBox
                            android:id="@+id/chkBtnSignDot"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharSignDot"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetN"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetN"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetJ"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetJ"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetE"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetE"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetF"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetF"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnNumber0"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber0"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llCharSelectRow4"
                        style="@style/comkitArrangeInOneRowLayoutStyle"
                        >

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetY"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetY"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnSignComma"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharSignComma"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetV"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetV"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetG"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetG"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnNumber5"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber5"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnSignSlash"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharSignSlash"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llCharSelectRow5"
                        style="@style/comkitArrangeInOneRowLayoutStyle"
                        >

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetQ"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetQ"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnNumber9"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber9"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetZ"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetZ"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetH"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetH"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnNumber3"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber3"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnNumber8"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber8"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llCharSelectRow6"
                        style="@style/comkitArrangeInOneRowLayoutStyle"
                        >

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetB"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetB"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnSignQuestion"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharSignQuestion"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnNumber4"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber4"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnNumber2"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber2"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnNumber7"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber7"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetC"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetC"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llCharSelectRow7"
                        style="@style/comkitArrangeInOneRowLayoutStyle"
                        >

                    <CheckBox
                            android:id="@+id/chkBtnNumber1"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber1"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetD"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetD"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnNumber6"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharNumber6"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnAlphabetX"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text="@string/mscdCharAlphabetX"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnReserve1"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text=""
                            android:visibility="invisible"
                            />

                    <CheckBox
                            android:id="@+id/chkBtnReserve2"
                            style="@style/mscdCharSelectChkBtnStyle"
                            android:text=""
                            android:visibility="invisible"
                            />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llConfigContainer"
                    style="@style/comkitOnlyWidthMatchParentLayoutStyle"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    >

                <LinearLayout
                        style="@style/comkitOnlyWidthMatchParentLayoutStyle"
                        android:orientation="horizontal"
                        >

                    <TextView
                            style="@style/mscdCharSelectConfigLabelStyle"
                            android:paddingRight="0dp"
                            android:text="@string/mscdCharSelectingConfigMsgLength"
                            />

                    <EditText
                            android:id="@+id/etMessageLength"
                            style="@style/mscdCharSelectConfigInputStyle"
                            android:maxLength="3"
                            android:text="@string/mscdCharSelectingConfigMsgLengthDefault"
                            />

                    <TextView
                            style="@style/mscdCharSelectConfigLabelStyle"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:text="@string/mscdCharSelectingConfigMsgLengthUnits"
                            />
                </LinearLayout>

                <LinearLayout
                        style="@style/comkitOnlyWidthMatchParentLayoutStyle"
                        android:orientation="horizontal"
                        >

                    <TextView
                            style="@style/mscdCharSelectConfigLabelStyle"
                            android:paddingRight="0dp"
                            android:text="@string/mscdCharSelectingConfigWordSize"
                            />

                    <EditText
                            android:id="@+id/etWordSize"
                            style="@style/mscdCharSelectConfigInputStyle"
                            android:maxLength="2"
                            android:text="@string/mscdCharSelectingConfigWordSizeDefault"
                            />

                    <TextView
                            style="@style/mscdCharSelectConfigLabelStyle"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:text="@string/mscdCharSelectingConfigWordSizeUnits"
                            />
                </LinearLayout>

                <LinearLayout
                        style="@style/comkitOnlyWidthMatchParentLayoutStyle"
                        android:orientation="horizontal"
                        >

                    <LinearLayout
                            style="@style/comkitBothWrapContentStyle"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                        <LinearLayout
                                style="@style/comkitOnlyWidthMatchParentLayoutStyle"
                                android:orientation="horizontal"
                                >

                            <TextView
                                    style="@style/mscdCharSelectConfigLabelStyle"
                                    android:paddingRight="0dp"
                                    android:text="@string/mscdCharSelectingConfigKeySpeed"
                                    />

                            <EditText
                                    android:id="@+id/etKeySpeed"
                                    style="@style/mscdCharSelectConfigInputStyle"
                                    android:maxLength="4"
                                    android:text="@string/mscdCharSelectingConfigKeySpeedDefault"
                                    />

                            <TextView
                                    style="@style/mscdCharSelectConfigLabelStyle"
                                    android:paddingLeft="0dp"
                                    android:paddingRight="0dp"
                                    android:text="@string/mscdCharSelectingConfigKeySpeedUnits"
                                    />
                        </LinearLayout>

                        <LinearLayout
                                style="@style/comkitOnlyWidthMatchParentLayoutStyle"
                                android:orientation="horizontal"
                                >

                            <TextView
                                    style="@style/mscdCharSelectConfigLabelStyle"
                                    android:paddingRight="0dp"
                                    android:text="@string/mscdCharSelectingConfigDitDuration"
                                    />

                            <EditText
                                    android:id="@+id/etDitDuration"
                                    style="@style/mscdCharSelectConfigInputStyle"
                                    android:maxLength="4"
                                    android:text="@string/mscdCharSelectingConfigDitDurationDefault"
                                    />

                            <TextView
                                    style="@style/mscdCharSelectConfigLabelStyle"
                                    android:paddingLeft="0dp"
                                    android:paddingRight="0dp"
                                    android:text="@string/mscdCharSelectingConfigDitDurationUnits"
                                    />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            style="@style/comkitBothWrapContentStyle"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            >

                        <ToggleButton
                                android:id="@+id/tglBtnRandomStringGenerateStrategy"
                                style="@style/comkitCommonTglBtnDefaultStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textOff="Regular"
                                android:textOn="Ruleless"
                                />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llBtnContainer"
                    style="@style/comkitOnlyWidthMatchParentLayoutStyle"
                    android:orientation="vertical"
                    >

                <Button
                        android:id="@+id/btnConfirm"
                        style="@style/mscdCommonBtnStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/comkitConfirm"
                        />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
