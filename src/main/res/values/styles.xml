    <!-- Common button style. -->
    <style name="mscdCommonBtnStyle"
           parent="comresCommonBtnDefaultStyle">
        <item name="android:layout_marginBottom">@dimen/comresSideMarginDefault</item>
        <item name="android:layout_marginTop">@dimen/comresSideMarginDefault</item>
        <item name="android:paddingLeft">@dimen/comresSideMarginDefault</item>
        <item name="android:paddingRight">@dimen/comresSideMarginDefault</item>
    </style>

    <!-- Char selecting button style. -->
    <style name="mscdCharSelectingTglBtnStyle"
           parent="comresCommonTglBtnDefaultStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- Char selecting button style. -->
    <style name="mscdCharSelectChkBtnStyle"
           parent="comresCommonChkBtnDefaultStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:button">@drawable/comres_chk_btn_common_default</item>
    </style>

    <!-- Char click button style. -->
    <style name="mscdCharInputBtnStyle"
           parent="comresCommonBtnDefaultStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/mscd_btn_char_click</item>
        <item name="android:textColor">@color/mscdCharClickBtnTextColorDefault</item>
        <item name="android:textSize">@dimen/mscdCharClickBtnTextSizeDefault</item>
    </style>

    <!-- Char selecting label style. -->
    <style name="mscdCharSelectConfigLabelStyle"
           parent="comresCommonLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- Char selecting input style. -->
    <style name="mscdCharSelectConfigInputStyle"
           parent="comresCommonInputStyle">
        <item name="android:inputType">number</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- Morse code copy display style. -->
    <style name="mscdMorseCodeCopyDisplayStyle"
           parent="comresCommonTextDisplayStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/comresSideMarginDefault</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">@dimen/comresSideMarginDefault</item>
        <item name="android:paddingRight">@dimen/comresSideMarginDefault</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:background">@drawable/mscd_morse_code_copy_display</item>
        <item name="android:textColor">@color/mscdMorseCodeCopyDisplayTextColorDefaultSkip</item>
        <item name="android:textSize">@dimen/mscdMorseCodeCopyDisplayTextSizeDefault</item>
    </style>
</resources>
